<h2><%= t("account.edit.title") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i><%= t("account.edit.password_placeholder") %></i>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i><%= t("account.edit.confirm_current_password_placeholder") %></i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <%= f.submit t("account.edit.submit"), class: "btn btn-primary" %>
  <%= link_to t("account.edit.cancel_my_account"), registration_path(resource_name), class: "btn btn-danger", data: { confirm: t("account.edit.cancel_my_account_confirmation") }, method: :delete %>
<% end %>
