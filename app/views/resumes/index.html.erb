<% JobCategory.all.each do |category| %>
  <% if category.resumes.listed.any? %>
    <section class="jobs">
      <h1>
        <%= link_to category.name, job_category_path(category) %>
      </h1>

      <ul class="jobs">
        <% category.resumes.listed.each do |resume| %>
          <li class="job">
            <h4><%= link_to resume.title, resume %></h4>
            <p><%= resume.name %> <span><%= t(:in) %></span> <%= resume.location %></p>
          </li>
        <% end %>
      </ul>
    </section>
  <% end %>
<% end %>

<% if Resume.listed.count == 0 %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <%= t("resumes.be_the_first") %>
  </div>
<% end %>
