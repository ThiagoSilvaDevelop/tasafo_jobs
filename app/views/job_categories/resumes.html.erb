<nav>
  <%= link_to t("resumes.back_to_all_resumes"), resumes_path %>
</nav>

<section class="jobs">
  <h1><%= @category.name %></h1>

  <% if @category.resumes.listed.any? %>
    <ul class="jobs">
      <% @category.resumes.listed.each do |resume| %>
        <li class="job">
          <h4><%= link_to resume.title, resume %></h4>
          <p><%= resume.name %> <span><%= t(:in) %></span> <%= resume.location %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<% if @category.resumes.listed.count == 0 %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <%= t("resumes.be_the_first") %>
  </div>
<% end %>
